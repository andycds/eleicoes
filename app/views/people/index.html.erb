<p id="notice"><%= notice %></p>

<h1>Listagem de eleitores</h1> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <!--th colspan="3"></th-->
      <td>Login</td>
      <td>Nome</td>
      <td>Email</td>
      <td>Apto</td>
      <td><a href="/logout" class="btn btn-outline-danger">Sair</a></td>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.documento %></td>
        <td><%= person.nome %></td>
        <td><%= person.email %></td>
        <td><% if person.apto_votar %>
            <font color="green">✔</font>
          <% else %>
            <font color="red">❌</font>
          <% end %>
        </td>
        <!--<td><%= link_to 'Habilitar/desabilitar', person, method: :put, data: { confirm: 'Tem certeza?' } %></td>-->
        <td><%= link_to 'Editar', edit_person_path(person), class: "btn btn-outline-secondary" %></td>
        <td>
          <% if person.apto_votar && person.email.present? %>
            <%= link_to 'Enviar senha', person, method: :delete, data: { confirm: 'E-mail enviado.' }, class: "btn btn-outline-secondary" %>
          <% end %>
        </td>
      </tr>
      <!--<tr-->
        <!--<td><%= link_to 'Show', person %></td>-->
        <!--<td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      <!--/tr-->
    <% end %>
  </tbody>
</table>

