<div class="container">
<div class="form-group">
  <%= form_for(@person) do |f| %>
    <% if @person.errors.any? %>
      <div class="row">
      <div id="error_explanation">
        <h2><%= pluralize(@person.errors.count, "error") %> Erros ao salvar:</h2>
        <ul>
          <% @person.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      </div>>
    <% end %>
    
    <div class="row">
      <%= f.label :documento %>
      <%= f.text_field :documento, class: "form-control" %>
    </div>

    <div class="row">
      <%= f.label :senha %>
      <%= f.text_field :senha, readonly: true, class: "form-control" %>
    </div>

    <div class="row">
      <%= f.label :nome %>
      <%= f.text_field :nome, class: "form-control" %>
    </div>

    <div class="row">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="row">
      <%= f.label :apto_votar %>
      <%= f.check_box :apto_votar, class: "form-control" %>
    </div>

    <div class="row">
      <%= f.submit 'Atualizar', class: "btn btn-success" %>
    </div>
  <% end %>
</div>
</div>